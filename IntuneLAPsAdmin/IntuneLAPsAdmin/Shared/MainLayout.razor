@inherits LayoutComponentBase
@using Sotsera.Blazor.Toaster
<ToastContainer />
<AuthorizeView>
    <Authorized>
        <ClientAuth>
            <div class="sidebar">
                <NavMenu />
            </div>

            <div class="main">
                <div class="top-row px-4 auth">
                    <LoginDisplay />
                </div>

                <div class="content px-4">
                    @Body
                </div>
            </div>
        </ClientAuth>
    </Authorized>
    <NotAuthorized>
        <p>Not Authorized</p>
    </NotAuthorized>
</AuthorizeView>